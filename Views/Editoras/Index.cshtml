@model IEnumerable<WMVCLivros.Models.Editoras>

@{
    ViewData["Title"] = "Index";
}

<h1>Editoras</h1>

<p>
    <a class="Add" asp-action="Create">Adicionar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Localizacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fundacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localizacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fundacao)
            </td>
            <td>
                    <a class="Add" asp-action="Edit" asp-route-id="@item.Id">Editar</a> 
                    <a class="Add" asp-action="Details" asp-route-id="@item.Id">Detalhes</a> 
                    <a class="Add" asp-action="Delete" asp-route-id="@item.Id">Remover</a>
            </td>
        </tr>
}
    </tbody>
</table>
